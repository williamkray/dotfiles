!general config
urxvt.cursorBlink: 1
URxvt.perl-ext-common: default,clipboard,url-select,keyboard-select
URxvt.depth: 32
URxvt.saveLines:0
URxvt.scrollBar: false
URxvt.iconFile: /home/william/.local/share/icons/Ursa icon theme/128x128/apps/terminator.png
urxvt.font: xft:Ubuntu Mono:size=10
!Disables the insanely annoying Ctrl+Shift shortcut that enters ISO14755 mode
URxvt.iso14755: False

!keyboard shortcuts
urxvt.keysym.Shift-Control-W: string:d
urxvt.keysym.Shift-Control-V: perl:clipboard:paste
urxvt.keysym.Shift-Control-C: perl:clipboard:copy
urxvt.keysym.Shift-Control-R: string:rs_tag -a 'rs_agent_dev:download_cookbooks_once=true'\n

!bind control-shift-arrows to move between panes in tmux
urxvt.keysym.Shift-Control-Up: string:OA
urxvt.keysym.Shift-Control-Down: string:OB
urxvt.keysym.Shift-Control-Left: string:OD
urxvt.keysym.Shift-Control-Right: string:OC

!bind alt-arrows to resize panes in tmux
urxvt.keysym.Meta-Up: string:Oa
urxvt.keysym.Meta-Down: string:Ob
urxvt.keysym.Meta-Left: string:Od
urxvt.keysym.Meta-Right: string:Oc

! change tmux windows
urxvt.keysym.Shift-Control-Prior: string:p
urxvt.keysym.Shift-Control-Next: string:n

!bind control-shift-z to zoom into tmux pane
urxvt.keysym.Shift-Control-Z: string:z

!bind to split windows into panes with | and -
urxvt.keysym.Shift-Control-bar: string:%
urxvt.keysym.Control-underscore: string:"

