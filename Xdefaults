!general config
urxvt.cursorBlink: 1
URxvt.perl-ext-common: default,clipboard,url-select,keyboard-select
URxvt.depth: 32
URxvt.saveLines:0
URxvt.scrollBar: false
URxvt.iconFile: /home/william/.local/share/icons/Ursa icon theme/128x128/apps/terminator.png
urxvt.font: xft:Ubuntu Mono:size=10
!Disables the insanely annoying Ctrl+Shift shortcut that enters ISO14755 mode
URxvt.iso14755: False

!shift+up changes directory up in the file tree
urxvt.keysym.Shift-Up: string:cd ..\n

!keyboard shortcuts
! \001 is ctrl+A, my tmux prefix
! \015 is return
! these keyboard shortcuts (tmux specific) don't work with tmux 2.1 for some reason
urxvt.keysym.Shift-Control-W: string:\001d
urxvt.keysym.Shift-Control-V: perl:clipboard:paste
urxvt.keysym.Shift-Control-C: perl:clipboard:copy
urxvt.keysym.Shift-Control-R: string:rs_tag -a 'rs_agent_dev:download_cookbooks_once=true'\n

!bind control-shift-arrows to move between panes in tmux
urxvt.keysym.Shift-Control-Up: string:\001:select-pane -U\015
urxvt.keysym.Shift-Control-Down: string:\001:select-pane -D\015
urxvt.keysym.Shift-Control-Left: string:\001:select-pane -L\015
urxvt.keysym.Shift-Control-Right: string:\001:select-pane -R\015

!bind alt-arrows to resize panes in tmux
urxvt.keysym.Meta-Up: string:\001:resize-pane -U\015
urxvt.keysym.Meta-Down: string:\001:resize-pane -D\015
urxvt.keysym.Meta-Left: string:\001:resize-pane -L\015
urxvt.keysym.Meta-Right: string:\001:resize-pane -R\015

! change tmux windows
urxvt.keysym.Shift-Control-Prior: string:\001p
urxvt.keysym.Shift-Control-Next: string:\001n

!bind control-shift-z to zoom into tmux pane
urxvt.keysym.Shift-Control-Z: string:\001z

!bind to split windows into panes with | and -
urxvt.keysym.Shift-Control-bar: string:\001%
urxvt.keysym.Control-underscore: string:\001"

!main colorscheme
*.cursorColor: #DCDCCC
*.background:  #383838
*.foreground:  #DCDCCC
*.color0: #383838
*.color1: #CC9393
*.color2: #7F9F7F
*.color3: #D0BF8F
*.color4: #DFAF8F
*.color5: #9C6363
*.color6: #8CD0D3
*.color7: #DCDCCC
*.color8: #3F3F3F
*.color9: #DCA3A3
*.color10: #8FB28F
*.color11: #E0CF9F
*.color12: #F0DFAF
*.color13: #AC7373
*.color14: #93E0E3
*.color15: #FFFFEF
