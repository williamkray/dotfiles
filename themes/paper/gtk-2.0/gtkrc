                overlay_stretch         = FALSE
            }
        image 
        {
                function                = OPTION
                state                   = INSENSITIVE
                shadow                  = OUT
                overlay_file            = "Others/null.png"
                overlay_stretch         = FALSE
            }
        image 
        {
                function                = OPTION
                state                   = NORMAL
                shadow                  = IN
                overlay_file            = "Check-Radio/menuoption.png"
                overlay_stretch         = FALSE
            }
        image 
        {
                function                = OPTION
                state                   = PRELIGHT
                shadow                  = IN
