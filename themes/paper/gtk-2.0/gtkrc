# How to draw boxes with a gap on one side (ie the page of a notebook)

    image 
    {
        function            = BOX_GAP
    file                = "Tabs/notebook.png" 
    border              = { 4, 4, 4, 4 }
    stretch             = TRUE
    gap_file            = "Tabs/notebook-gap-horiz.png"
    gap_border              = { 1, 1, 0, 0 }
    gap_side            = TOP
    }
    image 
    {
        function            = BOX_GAP
    file                = "Tabs/notebook.png"
    border              = { 4, 4, 4, 4 }
    stretch             = TRUE
    gap_file            = "Tabs/notebook-gap-horiz.png"
    gap_border          = { 1, 1, 0, 0 }
    gap_side            = BOTTOM
    }
    image 
    {
        function            = BOX_GAP
    file                = "Tabs/notebook.png"
    border              = { 4, 4, 4, 4 }
    stretch             = TRUE
    gap_file            = "Tabs/notebook-gap-vert.png"
    gap_border          = { 0, 0, 1, 1 }
    gap_side            = LEFT
    }
    image 
    {
        function            = BOX_GAP
        file                = "Tabs/notebook.png" 
        border              = { 4, 4, 4, 4 }
        stretch             = TRUE
        gap_file            = "Tabs/notebook-gap-vert.png"
        gap_border          = { 0, 0, 1, 1 }
        gap_side            = RIGHT
    }

